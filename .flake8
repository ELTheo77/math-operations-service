[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    .pytest_cache,
    .mypy_cache
ignore = 
    # Line too long (handled by max-line-length)
    E501,
    # Module imported but unused
    F401,
    # Whitespace before ':'
    E203,
    # Line break before binary operator
    W503
per-file-ignores =
    __init__.py:F401
max-complexity = 10